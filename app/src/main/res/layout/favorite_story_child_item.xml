<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="@dimen/dimen_220"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:layout_marginEnd="@dimen/dimen_8"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivFavoriteStoryChildThumbnail"
            android:layout_width="@dimen/dimen_220"
            android:layout_height="@dimen/dimen_220"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/allCircleImageView"
            tools:src="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/online_exhibit"
            android:textAllCaps="true"
            android:textColor="@color/blue"
            android:textSize="@dimen/dimen_text_size_12" />

        <TextView
            android:id="@+id/tvFavoriteStoryChildTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginEnd="@dimen/dimen_16"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:maxLines="2"
            android:textColor="@color/main_black"
            android:textSize="@dimen/dimen_text_size_16"
            tools:text="The Story of the World in 100 Objects The Story of the World in 100 Objects" />

        <TextView
            android:id="@+id/tvFavoriteStoryChildDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginEnd="@dimen/dimen_16"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="2"
            android:textColor="@color/gray"
            android:textSize="@dimen/dimen_text_size_12"
            tools:text="The Story of the World in 100 Objects The Story of the World in 100 Objects The Story of the World in 100 Objects" />

    </LinearLayout>

</layout>
