<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="@string/explore_with_street_view"
            android:textColor="@color/main_black"
            android:textSize="@dimen/dimen_text_size_26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="@string/explore_with_street_view_desc"
            android:textColor="@color/gray"
            android:textSize="@dimen/dimen_text_size_18" />

        <com.example.mobdev21_night_at_the_museum.presentation.widget.CollectionView
            android:id="@+id/cvHomeStreetView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:clipToPadding="false"
            android:paddingHorizontal="@dimen/dimen_20" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginBottom="@dimen/dimen_20"
            android:visibility="gone"
            app:cardBackgroundColor="@color/blue"
            app:cardCornerRadius="@dimen/dimen_corner_4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dimen_16"
                android:paddingTop="@dimen/dimen_6"
                android:paddingBottom="@dimen/dimen_8"
                android:text="@string/view_all"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_text_size_14" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvHomeStreetViewViewAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            app:cardCornerRadius="@dimen/dimen_corner_30"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="@id/tvProfileFullName"
            app:layout_constraintStart_toStartOf="@id/tvProfileFullName"
            app:layout_constraintTop_toBottomOf="@id/ivProfileAvatar"
            app:strokeColor="@color/gray_light"
            app:strokeWidth="@dimen/dimen_1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:paddingHorizontal="@dimen/dimen_16"
                android:paddingVertical="@dimen/dimen_6"
                android:text="@string/view_all"
                android:textColor="@color/main_black"
                android:textSize="@dimen/dimen_text_size_16" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</layout>
