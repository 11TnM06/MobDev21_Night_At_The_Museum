<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="@dimen/dimen_30"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/collections"
            android:textColor="@color/main_black"
            android:textSize="@dimen/dimen_text_size_30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/flAllCollectionHeaderTabAll"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_56"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground">

                <TextView
                    android:id="@+id/tvFavoriteTabAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/all"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/dimen_text_size_16" />

                <View
                    android:id="@+id/vAllCollectionHeaderTabAllEnable"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@color/blue" />

                <View
                    android:id="@+id/vAllCollectionHeaderTabAllDisable"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_gravity="bottom"
                    android:background="@color/gray_light"
                    android:visibility="gone" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/flAllCollectionHeaderTabAZ"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_56"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground">

                <TextView
                    android:id="@+id/tvFavoriteTabAZ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/az"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/dimen_text_size_16" />

                <View
                    android:id="@+id/vAllCollectionHeaderTabAZDisable"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_gravity="bottom"
                    android:visibility="gone"
                    android:background="@color/gray_light" />

                <View
                    android:id="@+id/vAllCollectionHeaderTabAZEnable"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@color/blue"
                    android:visibility="gone" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/flAllCollectionHeaderTabMap"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_56"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground">

                <TextView
                    android:id="@+id/tvFavoriteTabMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/map"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/dimen_text_size_16" />

                <View
                    android:id="@+id/vAllCollectionHeaderTabMapDisable"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_gravity="bottom"
                    android:visibility="gone"
                    android:background="@color/gray_light" />

                <View
                    android:id="@+id/vAllCollectionHeaderTabMapEnable"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@color/blue"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</layout>
